<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <RootNamespace>Opw.HttpExceptions.AspNetCore</RootNamespace>
        <Authors>Of Pine Wood, Peter van den Hout</Authors>
        <Description>ASP.NET Core Problem Details (RFC7807) extensions for using HttpExceptions.</Description>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <PackageId>Opw.HttpExceptions.AspNetCore</PackageId>
        <PackageTags>aspnetcore http exceptions RFC7807</PackageTags>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <PackageLicenseUrl>https://github.com/ofpinewood/http-exceptions/blob/master/LICENSE</PackageLicenseUrl>
        <PackageProjectUrl>https://github.com/ofpinewood/http-exceptions</PackageProjectUrl>
        <PackageIconUrl>https://github.com/ofpinewood/opw/blob/master/opw-logo-256x256-green.gif?raw=true</PackageIconUrl>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/ofpinewood/http-exceptions</RepositoryUrl>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Opw.HttpExceptions\Opw.HttpExceptions.csproj" />
    </ItemGroup>

</Project>
